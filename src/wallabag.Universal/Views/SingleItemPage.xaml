<common:basicPage
    x:Class="wallabag.Views.SingleItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wallabag.Views"
    xmlns:common="using:wallabag.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:triggers="using:wallabag.Common.VisualStateTriggers"
    x:Name="PageRoot"
    Loaded="PageRoot_Loaded" Unloaded="PageRoot_Unloaded"
    mc:Ignorable="d">

    <common:basicPage.BottomAppBar>
        <CommandBar ClosedDisplayMode="Minimal">
            <CommandBar.PrimaryCommands>
                <AppBarToggleButton Icon="Accept" Label="Mark as read" Command="{x:Bind ViewModel.CurrentItem.SwitchReadStatusCommand}"/>
                <AppBarToggleButton Icon="Favorite" Label="Mark as favorite" Command="{x:Bind ViewModel.CurrentItem.SwitchFavoriteStatusCommand}"/>
                <AppBarButton Icon="Tag" Label="Manage tags">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Top" x:Name="TagFlyout">
                            <Flyout.FlyoutPresenterStyle>
                                <Style TargetType="FlyoutPresenter">
                                    <Setter Property="Padding" Value="3"/>
                                </Style>
                            </Flyout.FlyoutPresenterStyle>
                            <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Width="350">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Rectangle Fill="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                                <TextBlock Text="TAGS" Style="{ThemeResource PageTitleTextBlockStyle}" Margin="15" RequestedTheme="Dark"/>
                                <!--list of current used tags-->
                                <TextBox x:Name="TagsTextBox" PlaceholderText="add tags (comma-separated)" Grid.Row="2" Margin="10,15"/>
                                <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="10,3">
                                    <Button x:Name="SaveTagsButton" Content="Save" Margin="5" Command="{x:Bind ViewModel.CurrentItem.AddTagsCommand}" CommandParameter="{Binding Text, ElementName=TagsTextBox}"/>
                                    <Button x:Name="CloseFlyoutButton" Content="Cancel" Margin="5" Click="CloseFlyoutButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton Icon="Font" Label="Font settings"/>
                <AppBarButton Label="Share">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72D;"/>
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="ShareContentFlyoutItem" Text="Content" Click="ShareContentFlyoutItem_Click"/>
                            <MenuFlyoutItem x:Name="ShareLinkFlyoutItem" Text="Link" Click="ShareLinkFlyoutItem_Click"/>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="Download as…">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="PDF"  Command="{x:Bind ViewModel.DownloadItemAsPDFCommand}"/>
                            <MenuFlyoutItem Text="EPUB" Command="{x:Bind ViewModel.DownloadItemAsEpubCommand}"/>
                            <MenuFlyoutItem Text="MOBI" Command="{x:Bind ViewModel.DownloadItemAsMobiCommand}"/>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Label="Delete article">
                    <AppBarButton.Flyout>
                        <Flyout>
                            <StackPanel>
                                <TextBlock Text="The article will be permantely deleted from wallabag."/>
                                <Button HorizontalAlignment="Right" Background="Red" Content="Delete" Margin="0,15,0,0" Foreground="White"/>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </common:basicPage.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="RootPanel">
        <WebView x:Name="WebView" common:WebViewExtensions.HTML="{x:Bind ViewModel.CurrentItem.ContentWithHeader}"/>
    </Grid>
</common:basicPage>
