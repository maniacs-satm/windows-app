<Page
    x:Class="wallabag.Views.SingleItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wallabag.Views"
    xmlns:common="using:wallabag.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:triggers="using:wallabag.Common.VisualStateTriggers"
    xmlns:controls="using:wallabag.Controls"
    xmlns:vm="using:wallabag.ViewModels"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:SingleItemPageViewModel/>
    </Page.DataContext>

    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Minimal">
            <CommandBar.PrimaryCommands>
                <AppBarToggleButton Icon="Accept" Label="Mark as read" Command="{Binding MarkItemAsReadCommand}"/>
                <AppBarToggleButton Icon="Favorite" Label="Mark as favorite" Command="{Binding CurrentItem.SwitchFavoriteStatusCommand}"/>
                <AppBarButton Icon="Tag" Label="Manage tags">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Top" x:Name="TagFlyout">
                            <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Width="300" RequestedTheme="Light">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Rectangle Fill="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                                <TextBlock Text="TAGS" Style="{ThemeResource CustomFlyoutPickerTitleTextBlockStyle}"/>
                                <controls:TagControl Tags="{Binding CurrentItem.Model.Tags, Mode=TwoWay}" Grid.Row="1"/>
                            </Grid>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton Icon="Font" Label="Font settings">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Top">
                            <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Width="425" RequestedTheme="Light">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Rectangle Fill="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                                <TextBlock Text="FONT SETTINGS" Style="{ThemeResource CustomFlyoutPickerTitleTextBlockStyle}"/>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <RelativePanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <RelativePanel.Resources>
                                            <Style BasedOn="{StaticResource RoundButtonStyle}" TargetType="Button">
                                                <Setter Property="Height" Value="32"/>
                                                <Setter Property="Width" Value="32"/>
                                            </Style>
                                        </RelativePanel.Resources>
                                        <Button x:Name="lightColorSchemeButton" Click="ChangeColorSchemeButton_Click" Background="White"/>
                                        <Button x:Name="changeFontFamilyButton" Click="FontFamilyButton_Click"
                                                RelativePanel.Below="lightColorSchemeButton"
                                                RelativePanel.RightOf="lightColorSchemeButton">A</Button>
                                        <Button x:Name="sepiaColorSchemeButton" Click="ChangeColorSchemeButton_Click" Background="Wheat"
                                                RelativePanel.Above="changeFontFamilyButton"
                                                RelativePanel.RightOf="changeFontFamilyButton"/>
                                        <Button x:Name="grayColorSchemeButton" Click="ChangeColorSchemeButton_Click" Background="Gray"
                                                RelativePanel.Below="changeFontFamilyButton"
                                                RelativePanel.LeftOf="changeFontFamilyButton"/>
                                        <Button x:Name="darkColorSchemeButton" Click="ChangeColorSchemeButton_Click" Background="Black"
                                                RelativePanel.AlignRightWith="sepiaColorSchemeButton"
                                                RelativePanel.Below="changeFontFamilyButton"/>
                                    </RelativePanel>
                                    <StackPanel Grid.Column="1">
                                        <Slider x:Name="fontSizeSlider"
                                                Margin="4"
                                                Header="Font size"
                                                Minimum="12"
                                                Maximum="26"
                                                Value="{Binding FontSize, Mode=TwoWay}"
                                                ValueChanged="Slider_ValueChanged"/>
                                        <Slider x:Name="lineHeightSlider"
                                                Margin="4"
                                                Header="Line height"
                                                Minimum="1"
                                                Maximum="2"
                                                SmallChange="0.1"
                                                StepFrequency="0.1"
                                                Value="{Binding LineHeight, Mode=TwoWay}"
                                                ValueChanged="Slider_ValueChanged"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Label="Share">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72D;"/>
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="ShareContentFlyoutItem" Text="Content" Click="ShareContentFlyoutItem_Click"/>
                            <MenuFlyoutItem x:Name="ShareLinkFlyoutItem" Text="Link" Click="ShareLinkFlyoutItem_Click"/>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="Download as file" Command="{x:Bind ViewModel.DownloadItemCommand}"/>
                <AppBarButton Label="Delete article">
                    <AppBarButton.Flyout>
                        <Flyout>
                            <StackPanel Margin="12">
                                <TextBlock Text="The article will be permantely deleted from wallabag."/>
                                <Button HorizontalAlignment="Right" Background="Red" Content="Delete" Margin="0,15,0,0" Foreground="White" Command="{x:Bind ViewModel.CurrentItem.DeleteCommand}"/>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <WebView x:Name="WebView" common:WebViewExtensions.HTML="{Binding CurrentItem.ContentWithHeader}"/>
    </Grid>
</Page>
