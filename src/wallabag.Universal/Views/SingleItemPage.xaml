<common:basicPage
    x:Class="wallabag.Views.SingleItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wallabag.Views"
    xmlns:common="using:wallabag.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:triggers="using:wallabag.Common.VisualStateTriggers"
    xmlns:controls="using:wallabag.Controls"
    x:Name="PageRoot"
    Loaded="PageRoot_Loaded" Unloaded="PageRoot_Unloaded"
    mc:Ignorable="d">

    <common:basicPage.BottomAppBar>
        <CommandBar ClosedDisplayMode="Minimal">
            <CommandBar.PrimaryCommands>
                <AppBarToggleButton Icon="Accept" Label="Mark as read" Command="{x:Bind ViewModel.CurrentItem.SwitchReadStatusCommand}"/>
                <AppBarToggleButton Icon="Favorite" Label="Mark as favorite" Command="{x:Bind ViewModel.CurrentItem.SwitchFavoriteStatusCommand}"/>
                <AppBarButton Icon="Tag" Label="Manage tags">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Top" x:Name="TagFlyout">
                            <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Width="350">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition />
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Rectangle Fill="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                                <TextBlock Text="TAGS" Style="{ThemeResource CustomFlyoutPickerTitleTextBlockStyle}"/>
                                <controls:TagControl Tags="{Binding CurrentItem.Tags, Mode=TwoWay}" Grid.Row="1"/>
                                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="10,3">
                                    <Button x:Name="SaveTagsButton" Content="Save" Margin="5" Command="{x:Bind ViewModel.CurrentItem.UpdateCommand}"/>
                                    <Button x:Name="CloseFlyoutButton" Content="Cancel" Margin="5" Click="CloseFlyoutButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton Icon="Font" Label="Font settings">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Top">
                            <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Width="425">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Rectangle Fill="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                                <TextBlock Text="FONT SETTINGS" Style="{ThemeResource CustomFlyoutPickerTitleTextBlockStyle}"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <!-- TODO: selection of the color scheme and the switch between serif and sans-serif -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Font size" Margin="5,5,0,7.5"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Style="{ThemeResource RoundButtonStyle}" Content="" FontFamily="Segoe MDL2 Assets" Width="35" Height="35" Margin="5"/>
                                            <TextBlock Text="18" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                                            <Button Style="{ThemeResource RoundButtonStyle}" Content="" FontFamily="Segoe MDL2 Assets" Width="35" Height="35" Margin="5"/>
                                        </StackPanel>
                                        <TextBlock Text="Line height" Margin="5,15,0,7.5"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Style="{ThemeResource RoundButtonStyle}" Content="" FontFamily="Segoe MDL2 Assets" Width="35" Height="35" Margin="5"/>
                                            <TextBlock Text="1.5" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                                            <Button Style="{ThemeResource RoundButtonStyle}" Content="" FontFamily="Segoe MDL2 Assets" Width="35" Height="35" Margin="5"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Label="Share">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72D;"/>
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="ShareContentFlyoutItem" Text="Content" Click="ShareContentFlyoutItem_Click"/>
                            <MenuFlyoutItem x:Name="ShareLinkFlyoutItem" Text="Link" Click="ShareLinkFlyoutItem_Click"/>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="Download as file" Command="{x:Bind DownloadItemCommand}"/>
                <AppBarButton Label="Delete article">
                    <AppBarButton.Flyout>
                        <Flyout>
                            <StackPanel>
                                <TextBlock Text="The article will be permantely deleted from wallabag."/>
                                <Button HorizontalAlignment="Right" Background="Red" Content="Delete" Margin="0,15,0,0" Foreground="White" Command="{x:Bind ViewModel.CurrentItem.DeleteCommand}"/>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </common:basicPage.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="RootPanel">
        <WebView x:Name="WebView"/>
    </Grid>
</common:basicPage>
