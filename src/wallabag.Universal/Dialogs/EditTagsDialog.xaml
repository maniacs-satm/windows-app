<ContentDialog
    x:Class="wallabag.Dialogs.EditTagsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="using:wallabag.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:wallabag.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Uid="EditTagsContentDialog"
    Title="EDIT TAGS"
    PrimaryButtonClick="UnregisterMessenger"
    PrimaryButtonText="Finish"
    RequestedTheme="Dark"
    TitleTemplate="{StaticResource ContentDialogTitleTemplate}"
    mc:Ignorable="d">

    <Grid>
        <Controls:TagControl
            Grid.Row="1"
            Margin="8,16"
            ItemsSource="{x:Bind Tags, Mode=TwoWay}" />
    </Grid>
</ContentDialog>
