<UserControl
    x:Class="wallabag.Controls.ItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:wallabag.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:wallabag.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <RelativePanel x:Name="RootPanel">
        <Image
            x:Name="image"
            Width="100"
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            Source="{Binding Model.PreviewPictureUri, Mode=OneTime}"
            Stretch="UniformToFill"/>
        <StackPanel
            Margin="8,0"
            RelativePanel.AlignVerticalCenterWithPanel="True"
            RelativePanel.RightOf="image">
            <TextBlock
                x:Name="Title"
                Margin="4,2"
                FontSize="16"
                MaxLines="2"
                RelativePanel.AlignVerticalCenterWithPanel="True"
                RelativePanel.RightOf="image"
                Text="{Binding Model.Title, Mode=OneTime}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="Hostname"
                Margin="4,2"
                Style="{StaticResource CaptionTextBlockStyle}"
                Opacity="0.7"
                RelativePanel.AlignVerticalCenterWithPanel="True"
                RelativePanel.Below="Title"
                RelativePanel.RightOf="image"
                Text="{Binding Model.DomainName, Mode=OneTime}" />
        </StackPanel>
    </RelativePanel>
</UserControl>
