<UserControl
    x:Class="wallabag.Controls.ItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:wallabag.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:wallabag.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <RelativePanel x:Name="RootPanel">
        <Image
            x:Name="image"
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            Source="{Binding Model.PreviewPictureUri, Mode=OneTime}"
            Stretch="UniformToFill" />
        <Rectangle
            x:Name="OverlayGrid"
            Fill="#3F000000"
            Visibility="Collapsed" />
        <StackPanel
            x:Name="StackPanel"
            Margin="8,0"
            RelativePanel.AlignVerticalCenterWithPanel="True">
            <TextBlock
                x:Name="Title"
                Margin="4,2"
                FontSize="16"
                MaxLines="2"
                Text="{Binding Model.Title, Mode=OneTime}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="Hostname"
                Margin="4,2"
                Style="{StaticResource CaptionTextBlockStyle}"
                Opacity="0.7"
                Text="{Binding Model.DomainName, Mode=OneTime}" />
        </StackPanel>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveStates">
                <VisualState x:Name="Narrow">
                    <VisualState.Setters>
                        <Setter Target="image.Width" Value="100" />
                        <Setter Target="StackPanel.(RelativePanel.RightOf)" Value="image" />
                        <Setter Target="OverlayGrid.Visibility" Value="Collapsed" />
                        <Setter Target="Title.TextAlignment" Value="Left" />
                        <Setter Target="Hostname.TextAlignment" Value="Left" />
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Wide">
                    <VisualState.Setters>
                        <Setter Target="StackPanel.RequestedTheme" Value="Dark" />
                        <Setter Target="OverlayGrid.Visibility" Value="Visible" />
                        <Setter Target="Title.TextAlignment" Value="Center" />
                        <Setter Target="Hostname.TextAlignment" Value="Center" />
                        <Setter Target="StackPanel.(RelativePanel.AlignHorizontalCenterWithPanel)" Value="True" />
                        <Setter Target="StackPanel.(RelativePanel.RightOf)" Value="{x:Null}" />
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </RelativePanel>
</UserControl>
