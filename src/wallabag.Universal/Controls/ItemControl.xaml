<UserControl
    x:Class="wallabag.Controls.ItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wallabag.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="350"
    d:DesignHeight="300">

    <Grid x:Name="RootGrid">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.Setters>
                        <Setter Target="HeaderImage.Visibility" Value="Collapsed"/>
                        <Setter Target="StackPanel.Background" Value="Transparent"/>
                        <Setter Target="TitleTextBlock.MaxLines" Value="2"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState>
                    <VisualState.Setters>
                        <Setter Target="RootGrid.Width" Value="350"/>
                        <Setter Target="RootGrid.Height" Value="300"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Image x:Name="HeaderImage" Stretch="UniformToFill"
               Source="{Binding Model.PreviewPictureUri, Mode=OneTime}"/>
        <Grid x:Name="StackPanel"
                    VerticalAlignment="Bottom" 
                    Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" 
                    Padding="16" 
                    Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="TitleTextBlock"
                       Text="{Binding Model.Title, Mode=OneTime}" 
                       TextWrapping="Wrap" 
                       FontSize="16" 
                       MaxLines="3"/>
            <StackPanel Orientation="Horizontal" Grid.Row="1"
                        Margin="0,4,0,0">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
                        <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        <Setter Property="Margin" Value="2,0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock x:Name="DomainNameTextBlock" Text="{Binding Model.DomainName}"/>
                <TextBlock Text="|" Opacity="0.5"/>
                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                <TextBlock Text="{Binding Model.EstimatedReadingTime}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
